<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/header_background1">

    <ImageView
        android:id="@+id/img_product1"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="1dp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cart3" />

    <TextView
        android:id="@+id/txtName1"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/img_product1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUnitPrice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorTrendingEnd"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtName1"
        app:layout_constraintTop_toBottomOf="@+id/txtName1" />

    <TextView
        android:id="@+id/txtSumPrice"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/colorTrendingEnd"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnPlus"
        app:layout_constraintStart_toStartOf="@+id/btnPlus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btnPlus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toStartOf="@+id/txtSumPrice"
        app:layout_constraintStart_toEndOf="@+id/txtName1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/minus" />

    <ImageView
        android:id="@+id/btnMinus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnPlus"
        app:layout_constraintStart_toStartOf="@+id/btnPlus"
        app:srcCompat="@drawable/plus" />
</androidx.constraintlayout.widget.ConstraintLayout>